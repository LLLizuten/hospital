    <servlet-name>PatientDeleteServlet</servlet-name>
    <url-pattern>/patientDeleteServlet</url-pattern>
  </servlet-mapping>

  <!-- 过滤器 -->
  <filter>
    <filter-name>ChineseFilter</filter-name>
    <filter-class>filter.ChineseFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ChineseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
