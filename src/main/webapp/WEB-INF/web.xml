<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- 登录 -->
  <servlet>
    <servlet-name>DoctorLoginServlet</servlet-name>
    <servlet-class>controller.doctor.DoctorLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DoctorLoginServlet</servlet-name>
    <url-pattern>/doctorLogin</url-pattern>
  </servlet-mapping>

  <!-- 注册 -->
  <servlet>
    <servlet-name>DoctorRegServlet</servlet-name>
    <servlet-class>controller.doctor.DoctorRegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DoctorRegServlet</servlet-name>
    <url-pattern>/doctorReg</url-pattern>
  </servlet-mapping>

  <!-- 患者信息修改 -->
  <servlet>
    <servlet-name>PatientAlterServlet</servlet-name>
    <servlet-class>controller.patient.PatientAlterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientAlterServlet</servlet-name>
    <url-pattern>/patientAlterServlet</url-pattern>
  </servlet-mapping>

  <!-- 患者信息删除 -->
